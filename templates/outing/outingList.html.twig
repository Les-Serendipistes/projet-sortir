{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Liste des sorties
{% endblock %}

{% block body %}
    <article class="grid-container">
        <h2>Lists des sorties</h2>
        <div class="grid-x grid-margin-x">
            <div class="grid-x grid-margin-x">
                <div class="medium-12 cell small-order-4 medium-order-1">
                    {% include 'outing/_filter.html.twig' with {form: form} only %}
                </div>
            </div>
        </div>
        <div class="medium-12 cell small-order-2 medium-order-1">
            <table class="ui celled table">
                <tbody>
                <thead>
                <th>Noms</th>
                <th>Dates de début</th>
                <th>Dates limite d'inscription</th>
                <th>Villes</th>
                <th>Campus</th>
                <th>Détails</th>
                </thead>
                {% for outing in outings %}
                    {% include 'outing/_outingTable.html.twig' with {outing: outing} only %}
                {% endfor %}
                </tbody>
            </table>
            <div class="pagination-event">
                {% do outings.setPageRange(2) %}
                {{ knp_pagination_render(outings, 'pagination/pagination.html.twig') }}
            </div>
        </div>
    </article>
{% endblock %}