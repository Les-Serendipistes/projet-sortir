{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Modifier son profil
{% endblock %}

{%  block body %}
    <h1 class="text-center">{{ user.pseudo }}</h1>

    <section>
        <img class="thumbnail" src="{{ asset('img/profile/'~ user.picture) }}" alt="Photo de profil" >
        <ul class="no-bullet">
            <li><strong>Nom :</strong> {{ user.firstname}}</li>
            <li><strong>Téléphone :</strong> {{ user.phone }}</li>
            <li><strong>Email :</strong> {{ user.email }}</li>
            <li><strong>Campus :</strong> {{ user.campus.name}}</li>
    </ul>
    </section>

<a href="{{ path('outing_list') }}"><button type="button" class="hollow button secondary">Retour</button></a>


{% endblock %}