{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Modifier son profil
{% endblock %}

{%  block body %}
    <h2 style="text-align:center">{{ user.pseudo }}</h2>

    <div class="card">
        <img src="{{ asset('img/profile/'~ user.picture) }}"  >
        <h4>Nom : {{ user.firstname}}</h4>
        <p>Téléphone : {{ user.phone }}</p>
        <p>Email : {{ user.email }}</p>
        <p class="title">Campus : {{ user.campus.name}}</p>

    </div>
    <div style="text-align:center"><a href="{{ path('outing_list') }}" ><button>Retour</button></a></div>


{% endblock %}